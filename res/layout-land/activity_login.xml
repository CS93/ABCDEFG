<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fhdwblue" >

    <Spinner
        android:id="@+id/choose_profile"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_below="@id/profile_choose_text"
        android:layout_alignLeft="@id/profile_choose_text"
        android:background="@color/white"
        android:textColor="@color/orange"
        android:textSize="100sp" />

    <Button
        android:id="@+id/profile_management_start"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundedbutton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/profile_management"
        android:textColor="@color/orange"
        android:textSize="40sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/profile_management_start"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundedbutton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/login"
        android:textColor="@color/orange"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/profile_choose_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@id/login"
        android:layout_marginTop="20dp"
        android:text="@string/profile_choose_login"
        android:textColor="@color/orange"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/t_appname_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="70dp"
        android:text="@string/app_name"
        android:textColor="@color/orange"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/i_logo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t_appname_login"
        android:layout_alignLeft="@+id/t_appname_login"
        android:layout_marginLeft="141dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_launcher" />
    
    <ImageButton android:id="@+id/ib_information_button_login"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:padding="100dip"
        android:src="@drawable/i" />

</RelativeLayout>
