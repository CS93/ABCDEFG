<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fhdwblue" >

    <TextView
        android:id="@+id/t_adduser_profile_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:text="@string/addProfile"
        android:textColor="@color/orange"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_adduser_profile_management"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/t_adduser_profile_management"
        android:layout_below="@+id/t_adduser_profile_management"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/orange"
        android:textSize="30sp" >
        </EditText>
    
    <Button
        android:id="@+id/b_adduser_profile_management"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/et_adduser_profile_management"
        android:layout_below="@+id/et_adduser_profile_management"
        android:layout_marginTop="25dp"
        android:text="@string/addprofile_button"
        android:textColor="@color/orange"
        android:background="@drawable/roundedbutton"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" 
        android:textSize="30sp"  />
    
    <View
        android:id="@+id/v_separator_profile_management"
    	android:layout_width="match_parent"
    	android:layout_height="10dp"
    	android:background="@color/black"	
    	android:layout_centerVertical="true"/>
    
     <TextView
        android:id="@+id/t_deluser_profile_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/v_separator_profile_management"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="20dp"
        android:text="@string/deleteProfile"
        android:textColor="@color/orange"
        android:textSize="30sp" />
    
    <Button
        android:id="@+id/b_deluser_profile_management"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/s_deluser_profile_management"
        android:layout_below="@+id/s_deluser_profile_management"
        android:layout_marginTop="25dp"
        android:text="@string/delprofile_button"
        android:textColor="@color/orange"
        android:background="@drawable/roundedbutton"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" 
        android:textSize="30sp"  />

    <Spinner
        android:id="@+id/s_deluser_profile_management"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/t_deluser_profile_management"
        android:layout_below="@+id/t_deluser_profile_management"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:textColor="@color/orange" />
    
    </RelativeLayout>