<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fhdwblue" >
    
    <TextView
        android:id="@+id/t_description_challenge_without_option_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Das Ergebnis:"
        android:textColor="@color/orange"
        android:textSize="30sp" />
    
    <Button
        android:id="@+id/b_continue_challenge_without_option_answer"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
		android:layout_centerHorizontal="true"
        android:text="Weiter"
        android:background="@drawable/roundedbutton"
        android:textColor="@color/orange"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/t_question_challenge_without_option_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_description_challenge_without_option"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:text="Frage..."
        android:textColor="@color/orange"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/t_correct_answer_description_without_option_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_question_challenge_without_option_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Richtige Antwort:"
        android:textColor="@color/green"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/t_correct_answer_without_option_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_correct_answer_description_without_option_answer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Antwort..."
        android:textColor="@color/green"
        android:textSize="30sp" />
    
    </RelativeLayout>