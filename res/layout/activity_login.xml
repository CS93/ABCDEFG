<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fhdwblue" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/logo" />

    <TextView
        android:id="@+id/appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:text="@string/app_name"
        android:textColor="@color/orange"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/choose_profile"
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:textColor="@color/orange"
        android:textSize="100sp" />

    <Button
        android:id="@+id/profile_management_start"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/roundedbutton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/profile_management"
        android:textColor="@color/orange"
        android:textSize="30sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_above="@+id/profile_management_start"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/roundedbutton"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/login"
        android:textColor="@color/orange"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/profile_choose_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choose_profile"
        android:layout_alignLeft="@+id/choose_profile"
        android:text="@string/profile_choose_login"
        android:textColor="@color/orange"
        android:textSize="30sp" />
    
    <ImageButton android:id="@+id/ib_information_button_login"
        android:layout_width="43dp"
        android:layout_height="38dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:padding="100dip"
        android:src="@drawable/i" />

</RelativeLayout>
