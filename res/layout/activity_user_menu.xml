<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ocker" >

    <ImageView
        android:id="@+id/i_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/t_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i_logo"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textColor="@color/orange" />

    <TextView
        android:id="@+id/t_hello_string_user_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_appname"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="21dp"
        android:text="@string/hallo"
        android:textColor="@color/orange"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/t_username_user_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/t_hello_string_user_menu"
        android:layout_alignBottom="@+id/t_hello_string_user_menu"
        android:layout_toRightOf="@+id/t_hello_string_user_menu"
        android:paddingLeft="5dp"
        android:text="@string/user"
        android:textColor="@color/orange"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b_category_user_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/category_choose_user_menu"
        android:textColor="@color/orange"
        android:background="@drawable/roundedbutton"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/b_statistic_user_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/b_category_user_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/statistic_user_menu"
        android:textColor="@color/orange"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/b_class_management_user_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/class_management"
        android:textColor="@color/orange"
        android:paddingRight="10dp"
        android:paddingLeft="10dp" />

</RelativeLayout>